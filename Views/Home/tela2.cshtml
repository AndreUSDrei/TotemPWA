@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos</title>
    <link rel="stylesheet" href="~/css/tela2.css" asp-append-version="true">

   <link href="https://fonts.googleapis.com/css2?family=Tilt+Warp&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Tilt+Warp&display=swap" rel="stylesheet">
    <script src="~/js/modal.js"></script>
</head>
<body>

    <div class="main">
        <div class="banner">
            <img src="~/img/banner.jpg" asp-append-version="true" alt="Banner">
            <div class="buttons">
                <button class="button">
                    <img class="img-menu-item" src="~/img/simbolo.jpg" asp-append-version="true" alt="Símbolo">
                </button>
            </div>
        </div>
        <div class="c1">
            <div class="menu">
                <div class="menu-item">
                    <img class="img-menu-item" src="~/img/menuburguerimage.png" asp-append-version="true" alt="Lanches">
                    <div>Lanches</div>
                </div>
                <div class="menu-item">
                    <img class="img-menu-item" src="~/img/combos.png" asp-append-version="true" alt="Combos">
                    <div>Combos</div>
                </div>
                <div class="menu-item">
                    <img class="img-menu-item" src="~/img/sobremesa.png" asp-append-version="true" alt="Sobremesas">
                    <div>Sobremesas</div>
                </div>
                <div class="menu-item">
                    <img class="img-menu-item" src="~/img/bebidas.png" asp-append-version="true" alt="Bebidas">
                    <div>Bebidas</div>
                </div>
                <div class="menu-item">
                    <img class="img-menu-item" src="~/img/batata.png" asp-append-version="true" alt="Extras">
                    <div>Extras</div>
                </div>
                <div class="menu-item">
                    <img class="img-menu-item" src="~/img/molhos.png" asp-append-version="true" alt="Molhos">
                    <div>Molhos</div>
                </div>
                <div class="menu-item">
                    <img class="img-menu-item" src="~/img/cupom.png" asp-append-version="true" alt="Promoções">
                    <div>Promoções</div>
                </div>
            </div>
            <div class="content">
                <div class="container-categoria">
                    <div class="nav-categorias">
                        <a href="#">Vegano</a>
                        <a href="#">Carne</a>
                        <a href="#">Frango</a>
                    </div>
                </div>
                <div class="pedido">
                    <div class="pedido-grid">

                        <!-- Item 1 -->
                        <div class="pedido-item" data-id="1" data-descricao="Pão de gergelim, cebola, alface, queijo cheddar, dois hambúrgueres de costela 180g" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/menuburguerimage.png" asp-append-version="true" alt="Burguer 404">
                            <h3 class="pedido-titulo">Burguer 404</h3> 
                            <h4 class="pedido-preco">R$ 24,90</h4>
                        </div>

                        <!-- Item 2 -->
                        <div class="pedido-item" data-id="2" data-descricao="Pão brioche, queijo prato, hambúrguer de costela 200g, bacon, cebola caramelizada" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/full.png" asp-append-version="true" alt="Full Stack">
                            <h3 class="pedido-titulo">Full Stack</h3> 
                            <h4 class="pedido-preco">R$ 39,90</h4>
                        </div>

                        <!-- Item 3 -->
                        <div class="pedido-item" data-id="3" data-descricao="Três hambúrgueres de costela 150g, queijo cheddar, cebola crispy, molho especial" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/loopingduplo.png" asp-append-version="true" alt="Looping Triplo">
                            <h3 class="pedido-titulo">Looping Triplo</h3> 
                            <h4 class="pedido-preco">R$ 32,90</h4>
                        </div>

                        <!-- Item 4 -->
                        <div class="pedido-item" data-id="4" data-descricao="Pão australiano, hambúrguer de fraldinha 180g, queijo, picles, cebola roxa" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/helloword.png" asp-append-version="true" alt="Hello Word">
                            <h3 class="pedido-titulo">Hello Word</h3> 
                            <h4 class="pedido-preco">R$ 24,90</h4>
                        </div>

                        <!-- Item 5 -->
                        <div class="pedido-item" data-id="5" data-descricao="Pão integral, hambúrguer de grão-de-bico, abobrinha, berinjela e molho de iogurte" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/vegan.png" asp-append-version="true" alt="VS Veggie">
                            <h3 class="pedido-titulo">VS Veggie</h3> 
                            <h4 class="pedido-preco">R$ 21,90</h4>
                        </div>

                        <!-- Item 6 -->
                        <div class="pedido-item" data-id="6" data-descricao="Pão de hambúrguer tradicional, hambúrguer de costela 180g, queijo prato, alface, tomate" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/backend.jpg" asp-append-version="true" alt="Backend">
                            <h3 class="pedido-titulo">Backend</h3> 
                            <h4 class="pedido-preco">R$ 22,90</h4>
                        </div>

                        <!-- Item 7 -->
                        <div class="pedido-item" data-id="7" data-descricao="Pão brioche, dois hambúrgueres de costela 180g, queijo cheddar, bacon, molho barbecue" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/front.png" asp-append-version="true" alt="Frontend">
                            <h3 class="pedido-titulo">Frontend</h3> 
                            <h4 class="pedido-preco">R$ 44,90</h4>
                        </div>

                        <!-- Item 8 -->
                        <div class="pedido-item" data-id="8" data-descricao="Pão de hambúrguer com gergelim, hambúrguer de costela 200g, queijo, bacon, cebola crispy" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/devopsbacon.png" asp-append-version="true" alt="DevOps Bacon">
                            <h3 class="pedido-titulo">DevOps Bacon</h3> 
                            <h4 class="pedido-preco">R$ 34,90</h4>
                        </div>

                        <!-- Item 9 -->
                        <div class="pedido-item" data-id="9" data-descricao="Pão de batata, hambúrguer de costela 150g, queijo coalho, molho de pimenta" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/byte.png" asp-append-version="true" alt="Byte Burguer">
                            <h3 class="pedido-titulo">Byte Burguer</h3> 
                            <h4 class="pedido-preco">R$ 24,90</h4>
                        </div>

                        <!-- Item 10 -->
                        <div class="pedido-item" data-id="10" data-descricao="Pão de hambúrguer tradicional, hambúrguer de fraldinha 180g, queijo, alface, tomate" onclick="abrirModalEditar(this)">
                            <img class="pedido-imagem" src="~/img/haburguer.png" asp-append-version="true" alt="Index Burguer">
                            <h3 class="pedido-titulo">Index Burguer</h3> 
                            <h4 class="pedido-preco">R$ 24,90</h4>
                        </div>

                    </div>
                </div>
            </div>
            
            <!-- Modal de Edição de Item -->
            <div id="modalEditarItem" class="modal-editar">
                <div class="modal-editar-content">
                    <span class="fechar-modal-editar">&times;</span>
                    <h2 class="modal-editar-titulo"></h2>
                    <div class="modal-editar-grid">
                        <div class="modal-editar-info">
                            <img class="modal-editar-imagem" src="" alt="">
                            <h4 class="modal-editar-preco"></h4>
                            <p class="modal-editar-descricao"></p>
                        </div>
                        <div class="modal-editar-ingredientes">
                            <!-- Ingredientes serão preenchidos via JavaScript -->
                        </div>
                    </div>
                    <div class="modal-editar-botoes">
                        <button class="modal-btn-confirm">Confirmar</button>
                    </div>
                </div>
            </div>
            
            <!-- Modal do Carrinho (existente) -->
            <div id="modalCarrinho" class="modal">
                <div class="modal-content">
                    <span id="fecharModal" class="fechar-modal">&times;</span>
                    <h2>Carrinho</h2>
                    <div class="modal-grid">
                            <div class="modal-pedido">
                                <img class="pedido-imagem" src="~/img/menuburguerimage.png" asp-append-version="true" alt="Burguer 404">
                                <h3 class="pedido-titulo">Burguer 404</h3> 
                                <h4 class="pedido-preco">R$ 24,90</h4>
                                <p class="pedido-descricao">Pão de gergelim, cebola, alface, queijo cheddar, dois hambúrgueres de costela 180g...</p>
                            </div>
                            <div class="listaIngredientes">
                                <div class="Ingrediente">
                                    <span class="IngredienteNome">Pão</span>
                                    <span class="IngredienteQuantidade">1x</span>
                                    <button class="botaoAdiciona">+</button>
                                    <button class="botaoRemove">-</button>
                                </div>
                                <div class="Ingrediente">
                                    <span class="IngredienteNome">Queijo</span>
                                    <span class="IngredienteQuantidade">1x</span>
                                    <button class="botaoAdiciona">+</button>
                                    <button class="botaoRemove">-</button>
                                </div>
                                <div class="Ingrediente">
                                    <span class="IngredienteNome">Carne</span>
                                    <span class="IngredienteQuantidade">1x</span>
                                    <button class="botaoAdiciona">+</button>
                                    <button class="botaoRemove">-</button>
                                </div>
                                <div class="Ingrediente">
                                    <span class="IngredienteNome">Tomate</span>
                                    <span class="IngredienteQuantidade">1x</span>
                                    <button class="botaoAdiciona">+</button>
                                    <button class="botaoRemove">-</button>
                                </div>
                                <div class="Ingrediente">
                                    <span class="IngredienteNome">Alface</span>
                                    <span class="IngredienteQuantidade">1x</span>
                                    <button class="botaoAdiciona">+</button>
                                    <button class="botaoRemove">-</button>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="barra-inferior">
            <div class="total">
                <span>Total:</span>
            </div>
            <div class="preco">
                <span>R$ 0,00</span>
            </div>
            <div class="ConteinerBtn">
                <div class="NavBtn">
                    <a id="cancelar" href="tela2.html">Cancelar</a>
                    <a id="botaoCarrinho" href="#" onclick="abrirModalCarrinho(); return false;">C</a>
                    <a id="prosseguir" href="TelaPagamento">Finalizar</a>
                </div>
            </div>
        </div>
    </div>

<script src="~/js/filtroCategorias.js" asp-append-version="true"></script>
<script src="~/js/modal.js" asp-append-version="true"></script>
<script src="~/js/modalEdit.js" asp-append-version="true"></script>
</body>
</html>