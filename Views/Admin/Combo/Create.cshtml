@model TotemPWA.Models.Combo
@{
    ViewData["Title"] = "Novo Combo";
    var products = ViewBag.Products as List<TotemPWA.Models.Product>;
}
<h2>Novo Combo</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Produtos do Combo</label>
        <div>
            @foreach (var product in products)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="selectedProducts" value="@product.Id" id="prod_@product.Id" />
                    <label class="form-check-label" for="prod_@product.Id">@product.Name (@product.Price.ToString("C"))</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-2">@Html.ValidationSummary()</div>
} 