@model TotemPWA.Models.Additional
@{
    ViewData["Title"] = "Detalhes do Adicional";
}
<h2>Detalhes do Adicional</h2>
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Produto</dt>
    <dd class="col-sm-10">@Model.Product?.Name</dd>
    <dt class="col-sm-2">Ingrediente</dt>
    <dd class="col-sm-10">@Model.Ingredient?.Name</dd>
</dl>
<a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Editar</a>
<a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a> 