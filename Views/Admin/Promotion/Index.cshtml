@model IEnumerable<TotemPWA.Models.Promotion>
@{
    ViewData["Title"] = "Promoções";
}
<h2>Promoções</h2>
<p>
    <a class="btn btn-success" href="/Admin/Promotion/Create">Nova Promoção</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Desconto (%)</th>
            <th>Válido até</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product?.Name</td>
            <td>@item.Percent</td>
            <td>@item.ValidUntil.ToString("dd/MM/yyyy")</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/Admin/Promotion/Edit/@item.Id">Editar</a>
                <a class="btn btn-sm btn-info" href="/Admin/Promotion/Details/@item.Id">Detalhes</a>
                <a class="btn btn-sm btn-danger" href="/Admin/Promotion/Delete/@item.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a href="/Admin/Dashboard">&larr; Voltar ao painel</a>
<style>
    .btn { padding: 6px 14px; border-radius: 6px; text-decoration: none; margin-right: 4px; }
    .btn-success { background: #43b324; color: #fff; }
    .btn-primary { background: #1976d2; color: #fff; }
    .btn-info { background: #0097a7; color: #fff; }
    .btn-danger { background: #e74c3c; color: #fff; }
    .btn:hover { opacity: 0.85; }
    table { width: 100%; margin-top: 18px; }
    th, td { padding: 8px; }
</style> 