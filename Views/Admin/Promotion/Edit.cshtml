@model TotemPWA.Models.Promotion
@{
    ViewData["Title"] = "Editar Promoção";
    var products = ViewBag.Products as List<TotemPWA.Models.Product>;
}
<h2>Editar Promoção</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Produto</label>
        <select asp-for="ProductId" required>
            <option value="">Selecione...</option>
            @foreach (var p in products)
            {
                <option value="@p.Id" @(Model.ProductId == p.Id ? "selected" : "")>@p.Name</option>
            }
        </select>
    </div>
    <div>
        <label>Desconto (%)</label>
        <input asp-for="Percent" type="number" min="1" max="99" required />
    </div>
    <div>
        <label>Válido até</label>
        <input asp-for="ValidUntil" type="date" required />
    </div>
    <button class="btn btn-success" type="submit">Salvar</button>
    <a class="btn btn-secondary" href="/Admin/Promotion">Cancelar</a>
</form>
<style>
    form { max-width: 340px; margin-top: 18px; }
    label { font-weight: 600; margin-bottom: 2px; display: block; }
    input, select { width: 100%; padding: 7px; border-radius: 6px; border: 1px solid #bbb; margin-bottom: 14px; font-size: 1rem; }
    .btn { padding: 7px 16px; border-radius: 6px; text-decoration: none; margin-right: 4px; border: none; cursor: pointer; }
    .btn-success { background: #43b324; color: #fff; }
    .btn-secondary { background: #888; color: #fff; }
    .btn:hover { opacity: 0.85; }
</style> 