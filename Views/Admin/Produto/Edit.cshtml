@model TotemPWA.Models.Product
@{
    ViewData["Title"] = "Editar Produto";
    var categorias = ViewBag.Categorias as List<TotemPWA.Models.Category>;
}
<h2>Editar Produto</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Nome</label>
        <input asp-for="Name" required />
    </div>
    <div>
        <label>Pre√ßo</label>
        <input asp-for="Price" type="number" step="0.01" min="0" required />
    </div>
    <div>
        <label>Categoria</label>
        <select asp-for="CategoryId" required>
            <option value="">Selecione...</option>
            @foreach (var c in categorias)
            {
                <option value="@c.Id" @(Model.CategoryId == c.Id ? "selected" : "")>@c.Name</option>
            }
        </select>
    </div>
    <button class="btn btn-success" type="submit">Salvar</button>
    <a class="btn btn-secondary" href="/Admin/Produto">Cancelar</a>
</form>
<style>
    form { max-width: 340px; margin-top: 18px; }
    label { font-weight: 600; margin-bottom: 2px; display: block; }
    input, select { width: 100%; padding: 7px; border-radius: 6px; border: 1px solid #bbb; margin-bottom: 14px; font-size: 1rem; }
    .btn { padding: 7px 16px; border-radius: 6px; text-decoration: none; margin-right: 4px; border: none; cursor: pointer; }
    .btn-success { background: #43b324; color: #fff; }
    .btn-secondary { background: #888; color: #fff; }
    .btn:hover { opacity: 0.85; }
</style> 